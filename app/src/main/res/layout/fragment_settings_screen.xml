<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsScreen.SettingsScreenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_switch_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/setting_switch_account"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/text_get_dev_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/setting_get_dev_items"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/text_get_pylons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/setting_get_pylons"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

</FrameLayout>